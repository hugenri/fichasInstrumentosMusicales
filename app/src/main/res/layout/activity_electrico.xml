<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/instrumentosLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".CuerdaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start">

        <!-- Primer botón -->
        <Button
            android:id="@+id/regresar"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="#E91E63"
            android:text="Regresar"
            android:textColor="#DDF3F0F0"
            android:textSize="8sp" />

        <!-- Segundo botón -->
        <Button
            android:id="@+id/estudiados"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="#142FC5"
            android:text="Estudiados"
            android:textColor="#DDFAF7F7"
            android:textSize="8sp" />
        <!-- tercer botón -->
        <Button
            android:id="@+id/Noestudiados"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="No estudiados"
            android:textColor="#DDFAF7F7"
            android:background="#142FC5"
            android:textSize="8sp" />

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />




</LinearLayout>
